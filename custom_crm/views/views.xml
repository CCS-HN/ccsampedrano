<odoo>
  <data>


        <record model="ir.ui.view" id="crm_lead_form_inh">
        <field name="name">crm_lead_form_form_view_inh</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />

        <field name="arch" type="xml">

            <xpath expr="//form/sheet/notebook/page[@name='extra']" position="after">
                            <page name="alumno" string="Informacion Alumno">
                                <group>
                                    <group>
                                        <field name="nombre_alumno" />
                                        <field name="modalidad"/>
                                        <field name="edad"/>
                                        <field name="fecha_nacimiento"/>
                                        <field name="genero"/>
                                        <field name="modalidad_id"/>
                                        <field name="curso_id"  domain="[('id_modalidad','==',modalidad_id.id)]"/>
                                    </group>
                                    <group >
                                        <field name="pais"/>
                                        <field name="padecimiento"/>
                                        <field name="receta"/>
                                        <field name="transporte"/>
                                        <field name="procedencia"/>
                                        <field name="correo_pri" string = 'Correo Primario'/>
                                        <field name="correo_secun"  string = 'Correo Secundario'/>

                                    </group>
                                </group>
                            </page>
            </xpath>
</field>
    </record>
