<odoo>
  <data>


        <record model="ir.ui.view" id="crm_lead_form_inh">
        <field name="name">crm_lead_form_form_view_inh</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />

        <field name="arch" type="xml">

            <xpath expr="//form/sheet/notebook/page[@name='extra']" position="after">
                            <page name="alumno" string="Informacion Alumno">
                                <group>
                                    <group>
                                        <field name="id_alumno"  string = "ID RNE" />
                                        <field name="tipo_ingreso"  string = "Tipo de Ingreso"/>
                                        <field name="titular_cuenta"  string = "Titular de cuenta"/>
                                        <field name="nombre_alumno" string = "Nombre Alumno"  />
                                        <field name="becado2" string = "Becado"  />
                                        <field name="correo_del_estudiante" string = "Correo del Estudiante"  />
                                        <!-- <field name="modalidad"/> -->
                                        <field name="edad" string = "Edad" required="1"/>
                                        <field name="fecha_nacimiento" string = "Fecha de Nacimiento" />
                                        <field name="genero" string = "Genero"  />
                                        <field name="modalidad_id" string = "Modalidad" />
                                        <field name="curso_id"  string = "Curso" />
                                        <field name="tipo_sangre" string = "Tipo de Sangre"/>
                                        <!-- <field name="curso_id"  domain="[('id_modalidad','==',modalidad_id)]"/> -->
                                    </group>

                                    <group >
                                        <field name="pais" string = "Nacionalidad" required="1"/>
                                        <field name="direcc" string = "Dirección" required="1"/>
                                        <field name="padecimiento" string = "Padecimiento"/>
                                        <field name="receta" string = "Receta"/>
                                        <field name="transporte" string = "Tipo de transporte" required="1"/>
                                        <field name="procedencia" string = "Institucion de Procendencia"/>
                                        
                                        

                                    </group>

                                    <group string="Informacion Padre" >
                                        <field name="id_padre" string = "ID"/>
                                        <!-- <field name="nombre_padre" string = "Nombre" /> -->
                                        <field name="partner_name" string = "Nombre" />
                                        <field name="correo_pri" string = "Correo del Padre"/>
                                        <!-- <field name="modalidad"/> -->
                                        <field name="fecha_padre" string = "Fecha de Nacimiento"/>
                                        <field name="movil_padre" string = "Movil"/>
                                        <field name="lugar_trb_padre" string = "Lugar de trabajo"/>
                                        <field name="tel_padre" string = "Telefono del trabajo"/>
                                    </group>

                                    <group string="Informacion Madre" >
                                        <field name="id_madre" string = "ID"/>
                                        <field name="nombre_madre" string = "Nombre"/>
                                        <field name="correo_secun"  string = "Correo de la Madre"/>
                                        <!-- <field name="modalidad"/> -->
                                        <field name="fecha_madre" string = "Fecha de Nacimiento"/>
                                        <field name="movil_madre" string = "Movil"/>
                                        <field name="lugar_trb_madre" string = "Lugar de trabajo"/>
                                        <field name="tel_madre" string = "Telefono de trabajo"/>
                                    </group>

                                    <group string="Informacion del Encargado" >
                                        <field name="id_responsable" string = "ID"/>
                                        <field name="nombre_responsable" string = "Nombre"/>
                                        <!-- <field name="modalidad"/> -->
                                        <field name="movil_responsable" string = "Movil"/>
                                        <!-- <field name="lugar_trb_responsable" string = "Lugar de trabajo"/> -->
                                        <!-- <field name="tel_responsable" string = "Telefono de trabajo"/> -->
                                    </group>
                                    
                                       <group string="Materia Retrasada" >
                                        <field name="materia_retrasada" string = "Materia"/>
                                        <field name="id_responsable_materia" string = "ID" />
                                        <field name="nombre_responsable_materia" string = "Nombre"/>
    <!--                                     <field name="id_responsable_materia2" string = "ID" />
                                        <field name="nombre_responsable_materia2" string = "Nombre"/> -->

                                    </group>
                                </group>
                            </page>
            </xpath>
            <xpath expr="//form/sheet/notebook/page[@name='lead']" position="after">
                            <page name="cc_conversacion" string="Curso Vacacional de Conversación">
                                <group>
                                    <group>
                                        <field name="reci_info"  string = "¿Te gustaria Recibir información obre nuestros programas y servicios?"/>
                                        <field name="name_cc"  string = "Nombre"/>
                                        <field name="tel" string = "Telefono" />
                                        <field name="email" string = "E - Mail" />
                                        <field name="rango_edad" string = "Edad por Rango" />
                                        <field name="genero" string = "Genero" />
                                        <field name="localidad" string = "Localidad" />
                                        <!-- <field name="taller"  /> -->
                                        <field name="taller_id" widget="many2many_tags"  string = "¿Cómo te enteraste de este taller? "/>
                                        <field name="otrotaller_id" widget="many2many_tags"   string = "¿En qué otro taller podrías tener interés?"/>

                                        <!-- <field name="otro_taller" string = "¿En qué otro taller podrías tener interés?" /> -->
                                        <field name="mas_info" string = "Más Informacion" />
                                    </group>
                                  </group>
                            </page>
            </xpath>
</field>
    </record>

<record model="ir.ui.view" id="crm_lead_search_opportunity_inh">
       <field name="name">view_crm_case_opportunities_filter_ihn</field>
       <field name="model">crm.lead</field>
       <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
       <field name="arch" type="xml">                            

            <xpath expr="//field[@name='name']" position="replace">

              <field name="name" string="Nombre del Alumno" filter_domain="[('nombre_alumno', 'ilike', self)]"/>

            </xpath>

            <xpath expr="//field[@name='name']" position="after">

              <field name="id_alumno" string="ID del Alumno" filter_domain="[('id_alumno', 'ilike', self)]"/>

            </xpath>
              <xpath expr="//field[@name='name']" position="after">

              <field name="nombre_padre" string="Nombre del Padre" filter_domain="[('nombre_padre', 'ilike', self)]"/>

            </xpath>
              <xpath expr="//field[@name='name']" position="after">

              <field name="nombre_madre" string="Nombre de la Madre" filter_domain="[('nombre_madre', 'ilike', self)]"/>

            </xpath>

        </field>
    </record>


        <record model="ir.ui.view" id="crm_lead_form_inh_tree">
        <field name="name">crm_lead_form_form_view_inh_tree</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />

        <field name="arch" type="xml">
       	<xpath expr="//field[@name='name']" position="after">
            <field name="id_alumno"  string = "ID RNE" />
            <field name="tipo_ingreso"  string = "Tipo de Ingreso"/>
            <field name="nombre_alumno" string = "Nombre Alumno"  />
            <field name="becado2" string = "Becado"  />
            <field name="correo_del_estudiante" string = "Correo del Estudiante"  />
                                        <!-- <field name="modalidad"/> -->
            <field name="edad" string = "Edad" required="1"/>
            <field name="fecha_nacimiento" string = "Fecha de Nacimiento" />
            <field name="genero" string = "Genero"  />
            <field name="modalidad_id" string = "Modalidad" />
            <field name="curso_id"  string = "Curso" />
            <field name="tipo_sangre" string = "Tipo de Sangre"/>
                                        <!-- <field name="curso_id"  domain="[('id_modalidad','==',modalidad_id)]"/> -->
            </xpath>
         </field>
    </record>
